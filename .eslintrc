{
    "extends": [
        "airbnb"
    ],
    "rules": {
        "indent": ["error", 4],
        "max-len": ["error", { "code": 120 }],
        "no-console": "off",
        "no-continue": "off",
        "no-plusplus": "off",
        "no-await-in-loop": "off"
    },
    "globals" : {
        "artifacts": false,
        "contract": false,
        "assert": false,
        "it": false,
        "before": false,
        "describe": false,
        "web3": false
    }
}